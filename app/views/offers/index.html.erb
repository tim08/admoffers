<p id="notice"><%= notice %></p>

<h1>Offers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Advertiser</th>
      <th>Payout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= best_in_place offer, :name %></td>
        <td><%= best_in_place offer, :advertiser %></td>
        <td><%= best_in_place offer, :payout %></td>
        <td><%= link_to 'Show', offer %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_offer_path %>

<script>
    $(document).ready(function() {
        /* Activating Best In Place */
        jQuery(".best_in_place").best_in_place();
    });
</script>
